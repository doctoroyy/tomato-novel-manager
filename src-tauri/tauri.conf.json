{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tomato Novel Manager",
  "version": "0.1.3",
  "identifier": "com.tomato.novel.manager",
  "build": {
    "beforeDevCommand": "pnpm tauri icon app-icon.svg && pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm tauri icon app-icon.svg && pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "番茄小说下载器",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "entitlements": "./entitlements.plist",
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  }
}
